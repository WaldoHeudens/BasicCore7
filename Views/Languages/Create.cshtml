@model BasicCore7.Models.Language

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["New Language"];
}

<h1>@localizer["New Language"]</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["Cultures"]</label>
                <input asp-for="Cultures" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsShown" /> @Html.DisplayNameFor(model => model.IsShown)
                </label>
            </div>
            <div class="form-group" style="margin-top:20px">
                <input type="submit" value=@localizer["Save"] class="btn btn-primary" />
            </div>
        </form>
        <h3><strong>@ViewData["ErrorMessage"]</strong></h3>
    </div>
</div>

<div style="margin-top:20px">
    <a asp-action="Index">@localizer["Back to List"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
